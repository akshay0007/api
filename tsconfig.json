{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist/",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
